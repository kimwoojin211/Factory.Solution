@{
  Layout = "_Layout";
}
@using Factory.Models;
@model List<Factory.Models.Engineer>

<h1>Engineers</h1>

@if(@Model.Count == 0)
{
  <p>No Engineers available</p>
}

<ul>
  @foreach(Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new { engineerId = engineer.EngineerId })</li>
  }
</ul>

<hr />
<p>@Html.ActionLink("Add a new engineer", "Create")</p>
<p>@Html.ActionLink("Click here to see all machines", "Index", "Machines")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>