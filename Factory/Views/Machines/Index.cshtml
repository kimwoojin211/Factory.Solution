@{
  Layout = "_Layout";
}
@using Factory.Models;
@model List<Factory.Models.Machine>

<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <p>No machines have been added yet!</p>
}

<ul>
  @foreach(Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.Name}", "Details", new { machineId = machine.MachineId })</li>
  }
</ul>


<p>@Html.ActionLink("Add a new machine", "Create")</p>
<p>@Html.ActionLink("Click here to see all engineers", "Index", "Engineers")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
