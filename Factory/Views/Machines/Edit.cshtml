@{
  Layout = "_Layout";
}
@model Factory.Models.Machine

@if(ViewBag.ErrorMessage != null)
{
  <h1 style="color:red">@ViewBag.ErrorMessage</h1>
}

<h4>Add a new Machine</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(machine => machine.Name)
  @Html.EditorFor(machine => machine.Name)

  @Html.LabelFor(machine => machine.Manufacturer)
  @Html.EditorFor(machine => machine.Manufacturer)

  @Html.Label("Model Number")
  @Html.EditorFor(machine => machine.ModelNumber)

  @Html.LabelFor(machine => machine.Condition)
  @Html.RadioButtonFor(machine => machine.Condition,"Operational")
  @Html.Label("Operational")
  @Html.RadioButtonFor(machine => machine.Condition,"Malfunctioning")
  @Html.Label("Malfunctioning")
  @Html.RadioButtonFor(machine => machine.Condition,"Under Repair")
  @Html.Label("Under Repair")
  
  @Html.Label("Date of Last Service")
  @Html.EditorFor(machine => machine.LastServiced, new { type="date" })

  <input type="submit" value="Add new machine" />
}

<hr />
<p>@Html.ActionLink($"Back to {Model.Name}'s details (Changes not saved)", "Details", new { machineId = Model.MachineId})</p>
<p>@Html.ActionLink("Show all machines", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
